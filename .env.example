# This is an example environment file.
# Copy this file to .env and fill in the values for your local development environment.

PROJECT_NAME="QuizCrafter"

# PostgreSQL Settings
POSTGRES_SERVER=db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=rag_uit_dev

# Backend Settings
# Generate a secret key with: openssl rand -hex 32
SECRET_KEY=
FRONTEND_HOST=http://localhost:5173
ENVIRONMENT=local

# Canvas API Credentials (Register your app in Canvas Developer Keys)
CANVAS_CLIENT_ID=
CANVAS_CLIENT_SECRET=
CANVAS_REDIRECT_URI=http://localhost:8000/api/v1/auth/canvas/callback
CANVAS_BASE_URL=https://uit.instructure.com

# Canvas Course Filtering (optional)
# Filter courses by name prefixes (comma-separated)
# Example: CANVAS_COURSE_PREFIX_FILTER="SB_ME_,TK-,INF-"
# Leave empty to show all courses
CANVAS_COURSE_PREFIX_FILTER=

# Azure OpenAI Settings
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=

# Default Admin User (optional, created by prestart script)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin

# Domain for Traefik (used for local routing)
DOMAIN=localhost

# SMTP Settings (optional, for email features)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
